PG_PASSWORD=postgres

# InfluxDB Configuration  
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=netops-token-123
INFLUX_ORG=netops
INFLUX_BUCKET=telemetry
INFLUX_USER=admin
INFLUX_PASSWORD=password
